%li
  %span.show_comment_block
    - if can? :destroy, comment
      = link_to "<button type='button' class='glyphicon glyphicon-remove delete_button' aria-hidden='true'></button>".html_safe, announcement_comment_path(announcement.id, comment.id), method: :delete
    %strong
      = comment.user.username
      \:
  %span.time_ago_in_words.float_right
    = time_ago_in_words(comment.updated_at) 
    ago.
  %span.clear_both
    = comment.content


